  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header class="site-header">
    <div class="container header-content">
      <a href="/" class="logo-group" aria-label="<%= brand.name %> - Home">
        <img src="/uploads/logos/ellariseslogo.png" alt="<%= brand.name %>" class="logo-mark">
      </a>
      
      <nav class="main-nav" id="mainNav">
        <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'about' ? ' active' : '' %>" href="/about">About</a>
        <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'programs' ? ' active' : '' %>" href="/programs">Programs</a>
        <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'events' ? ' active' : '' %>" href="/events">Events</a>
        <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'media' ? ' active' : '' %>" href="/media">Media</a>
      </nav>

      <div class="header-actions">
        <% if (user) { %>
          <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? ' active' : '' %>" href="/dashboard">Dashboard</a>
          <span class="nav-user">Hi, <%= user.firstName %></span>
          <a class="nav-link" href="/logout">Logout</a>
        <% } else { %>
          <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'contact' ? ' active' : '' %>" href="/contact">Contact</a>
          <a class="nav-link<%= typeof currentPage !== 'undefined' && currentPage === 'login' ? ' active' : '' %>" href="/login">Login</a>
        <% } %>
        <a class="btn btn-primary" href="/donate">Donate</a>
        <button class="mobile-toggle" id="mobileToggle" aria-label="Toggle navigation">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </header>

