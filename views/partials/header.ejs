  <link rel="shortcut icon" type="image/png" href="/uploads/logos/ellariseslogo.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/uploads/logos/ellariseslogo.png">
  <link rel="apple-touch-icon" sizes="152x152" href="/uploads/logos/ellariseslogo.png">
  <link rel="apple-touch-icon" sizes="144x144" href="/uploads/logos/ellariseslogo.png">
  <link rel="apple-touch-icon" sizes="120x120" href="/uploads/logos/ellariseslogo.png">
  <link rel="apple-touch-icon" sizes="114x114" href="/uploads/logos/ellariseslogo.png">
  <link rel="apple-touch-icon" sizes="76x76" href="/uploads/logos/ellariseslogo.png">
