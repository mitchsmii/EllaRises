<%- include('../partials/header') %>

    <%
      // Calculate progress stats
      const totalMilestones = milestones.length;
      const totalPoints = milestones.reduce((sum, m) => sum + m.points, 0);
      const uniqueParticipants = [...new Set(participantMilestones.map(pm => pm.participantId))].length;
      const totalCompletions = participantMilestones.length;
      
      // For demo: simulate a user's progress (3 out of 8 milestones completed)
      const userCompletedCount = 3;
      const userEarnedPoints = 35; // Orientation (10) + Mentor Meeting (15) + Workshop (10)
      const progressPercent = Math.round((userCompletedCount / totalMilestones) * 100);
      
      // Get completed milestone IDs for this user (demo)
      const userCompletedMilestones = [1, 2, 3];
    %>

    <!-- Page Hero -->
    <section class="page-hero">
      <div class="container">
        <p class="eyebrow"><%= user.role === 'manager' ? 'Admin' : 'My Progress' %></p>
        <h1>Program <em>Milestones</em></h1>
        <p class="page-lead">Track achievements and progress through the program.</p>
        <% if (user.role === 'manager') { %>
          <div class="hero-actions">
            <a href="/milestones/new" class="btn btn-primary">+ Create Milestone</a>
          </div>
        <% } %>
      </div>
    </section>

    <!-- Milestone Templates -->
    <section class="section">
      <div class="container">
        <div class="section-header">
          <h2><%= user.role === 'manager' ? 'Milestone Templates' : 'All Milestones' %></h2>
          <p class="text-muted"><%= user.role === 'manager' ? 'These are the milestones that can be assigned to participants.' : 'Complete milestones to earn points and track your journey.' %></p>
        </div>

        <% if (user.role !== 'manager') { %>
          <!-- User Progress Bar -->
          <div class="user-progress-card">
            <div class="progress-header">
              <span class="progress-label"><%= userCompletedCount %> of <%= totalMilestones %> completed</span>
              <span class="progress-percentage"><%= progressPercent %>%</span>
            </div>
            <div class="progress-bar-container">
              <div class="progress-bar" style="width: <%= progressPercent %>%"></div>
            </div>
          </div>
        <% } %>

        <div class="milestone-grid">
          <% milestones.forEach(milestone => { 
            const isCompleted = userCompletedMilestones.includes(milestone.id);
          %>
            <div class="milestone-card <%= isCompleted ? 'completed' : '' %>">
              <% if (isCompleted && user.role !== 'manager') { %>
                <div class="milestone-completed-badge">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                  Completed
                </div>
              <% } %>
              <div class="milestone-header">
                <span class="milestone-category"><%= milestone.category %></span>
                <span class="milestone-points"><%= milestone.points %> pts</span>
              </div>
              <h3><%= milestone.title %></h3>
              <p><%= milestone.description %></p>
              <% if (user.role === 'manager') { %>
                <div class="milestone-actions">
                  <button class="btn btn-sm btn-outline">Edit</button>
                  <button class="btn btn-sm btn-outline">Assign</button>
                </div>
              <% } %>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Recent Completions -->
    <section class="section section-alt">
      <div class="container">
        <div class="section-header">
          <h2>Recent Completions</h2>
          <p class="text-muted">Latest milestone achievements by participants.</p>
        </div>

        <div class="data-table-wrapper">
          <table class="data-table">
            <thead>
              <tr>
                <th>Participant</th>
                <th>Milestone</th>
                <th>Completed</th>
                <% if (user.role === 'manager') { %>
                  <th>Actions</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% participantMilestones.forEach(pm => { %>
                <tr>
                  <td>
                    <a href="/participants/<%= pm.participantId %>"><%= pm.participantName %></a>
                  </td>
                  <td><%= pm.milestoneTitle %></td>
                  <td><%= new Date(pm.completedAt).toLocaleDateString() %></td>
                  <% if (user.role === 'manager') { %>
                    <td>
                      <button class="btn btn-sm btn-danger">Remove</button>
                    </td>
                  <% } %>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

<%- include('../partials/footer') %>

