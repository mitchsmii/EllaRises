<%- include('../partials/header') %>

    <!-- Page Hero -->
    <section class="page-hero compact">
      <div class="container">
        <a href="/donations" class="btn btn-sm btn-outline" style="margin-bottom: var(--space-sm);">‚Üê Back to Donations</a>
        <p class="eyebrow">Admin</p>
        <h1><%= donation ? 'Edit' : 'Record' %> <em>Donation</em></h1>
      </div>
    </section>

    <!-- Form Section -->
    <section class="section">
      <div class="container">
        <div class="form-card">
          <% if (error) { %>
            <div class="alert alert-error" style="margin-bottom: var(--space-xl);">
              <%= error %>
            </div>
          <% } %>

          <form method="POST" action="<%= donation ? '/manage/donations/' + donation.donationid : '/manage/donations' %>">
            
            <div class="form-group">
              <label for="donorSearch">Donor</label>
              <div class="user-search-container">
                <input 
                  type="text" 
                  id="donorSearch" 
                  class="form-control"
                  placeholder="Search by name or email..."
                  autocomplete="off"
                  value="<%= donation && donation.firstname ? donation.firstname + ' ' + donation.lastname + ' (' + donation.email + ')' : '' %>"
                >
                <input 
                  type="hidden" 
                  id="personid" 
                  name="personid" 
                  value="<%= donation ? donation.personid : '' %>"
                >
                <div id="userSearchResults" class="user-search-results"></div>
              </div>
              <small class="form-help">Search for a donor by name or email. Leave empty for anonymous donations.</small>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="donationamount">Amount *</label>
                <div class="input-with-prefix">
                  <span class="input-prefix">$</span>
                  <input 
                    type="number" 
                    id="donationamount" 
                    name="donationamount" 
                    class="form-control"
                    step="0.01"
                    min="0"
                    value="<%= donation ? donation.donationamount : '' %>"
                    placeholder="0.00"
                    required
                  >
                </div>
              </div>

              <div class="form-group">
                <label for="donationdate">Date *</label>
                <input 
                  type="date" 
                  id="donationdate" 
                  name="donationdate" 
                  class="form-control"
                  value="<%= donation ? donation.donationdate : new Date().toISOString().split('T')[0] %>"
                  required
                >
              </div>
            </div>

            <div class="form-actions">
              <a href="/donations" class="btn btn-outline">Cancel</a>
              <button type="submit" class="btn btn-primary"><%= donation ? 'Update' : 'Record' %> Donation</button>
            </div>
          </form>
        </div>
      </div>
    </section>

    <style>
      .form-card {
        background: var(--white);
        border-radius: var(--radius-xl);
        padding: var(--space-2xl);
        max-width: 600px;
        margin: 0 auto;
        box-shadow: var(--shadow-sm);
      }
      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-lg);
      }
      .form-group {
        margin-bottom: var(--space-lg);
      }
      .form-group label {
        display: block;
        font-weight: 500;
        margin-bottom: var(--space-xs);
        color: var(--text-primary);
      }
      .form-control {
        width: 100%;
        padding: var(--space-sm) var(--space-md);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-md);
        font-size: 1rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
      }
      .form-control:focus {
        outline: none;
        border-color: var(--salmon);
        box-shadow: 0 0 0 3px rgba(var(--salmon-rgb), 0.2);
      }
      .form-help {
        display: block;
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-top: var(--space-xs);
      }
      .input-with-prefix {
        display: flex;
        align-items: stretch;
      }
      .input-prefix {
        display: flex;
        align-items: center;
        padding: 0 var(--space-md);
        background: var(--bg-light);
        border: 1px solid var(--border-light);
        border-right: none;
        border-radius: var(--radius-md) 0 0 var(--radius-md);
        color: var(--text-secondary);
        font-weight: 500;
      }
      .input-with-prefix .form-control {
        border-radius: 0 var(--radius-md) var(--radius-md) 0;
      }
      .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: var(--space-md);
        margin-top: var(--space-xl);
        padding-top: var(--space-xl);
        border-top: 1px solid var(--border-light);
      }
      .user-search-container {
        position: relative;
      }
      .user-search-results {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: var(--white);
        border: 1px solid var(--border-light);
        border-top: none;
        border-radius: 0 0 var(--radius-md) var(--radius-md);
        box-shadow: var(--shadow-md);
        max-height: 300px;
        overflow-y: auto;
        z-index: 1000;
        display: none;
      }
      .user-search-results.show {
        display: block;
      }
      .user-result-item {
        padding: var(--space-md);
        cursor: pointer;
        border-bottom: 1px solid var(--border-light);
        transition: background-color 0.2s ease;
      }
      .user-result-item:hover {
        background-color: var(--bg-light);
      }
      .user-result-item:last-child {
        border-bottom: none;
      }
      .user-result-name {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: var(--space-xs);
      }
      .user-result-email {
        font-size: 0.85rem;
        color: var(--text-secondary);
      }
      .user-result-location {
        font-size: 0.8rem;
        color: var(--text-tertiary);
        margin-top: var(--space-xs);
      }
      .user-result-id {
        font-size: 0.75rem;
        color: var(--text-tertiary);
        margin-top: var(--space-xs);
      }
      @media (max-width: 600px) {
        .form-row {
          grid-template-columns: 1fr;
        }
        .form-card {
          padding: var(--space-lg);
        }
      }
    </style>

    <script>
      (function() {
        const donorSearch = document.getElementById('donorSearch');
        const personidInput = document.getElementById('personid');
        const resultsContainer = document.getElementById('userSearchResults');
        let searchTimeout;

        // Clear selection button
        const clearBtn = document.createElement('button');
        clearBtn.type = 'button';
        clearBtn.className = 'btn btn-sm btn-outline';
        clearBtn.textContent = 'Clear';
        clearBtn.style.marginTop = 'var(--space-xs)';
        clearBtn.style.display = 'none';
        clearBtn.addEventListener('click', () => {
          donorSearch.value = '';
          personidInput.value = '';
          resultsContainer.classList.remove('show');
          clearBtn.style.display = 'none';
        });
        donorSearch.parentElement.appendChild(clearBtn);

        // Search functionality
        donorSearch.addEventListener('input', (e) => {
          const query = e.target.value.trim();
          
          // Clear personid if search is cleared
          if (!query) {
            personidInput.value = '';
            resultsContainer.classList.remove('show');
            clearBtn.style.display = 'none';
            return;
          }

          // Clear previous timeout
          clearTimeout(searchTimeout);

          // Only search if query is at least 2 characters
          if (query.length < 2) {
            resultsContainer.classList.remove('show');
            return;
          }

          // Debounce search
          searchTimeout = setTimeout(async () => {
            try {
              const response = await fetch(`/api/search-users?q=${encodeURIComponent(query)}`);
              const users = await response.json();

              // Clear previous results
              resultsContainer.innerHTML = '';

              if (users.length === 0) {
                resultsContainer.innerHTML = '<div class="user-result-item" style="cursor: default; color: var(--text-secondary);">No users found</div>';
              } else {
                users.forEach(user => {
                  const item = document.createElement('div');
                  item.className = 'user-result-item';
                  item.innerHTML = `
                    <div class="user-result-name">${escapeHtml(user.firstname || '')} ${escapeHtml(user.lastname || '')}</div>
                    <div class="user-result-email">${escapeHtml(user.email || '')}</div>
                    ${user.city || user.state ? `<div class="user-result-location">${escapeHtml(user.city || '')}${user.city && user.state ? ', ' : ''}${escapeHtml(user.state || '')}</div>` : ''}
                    <div class="user-result-id">ID: ${user.personid}</div>
                  `;
                  item.addEventListener('click', () => {
                    donorSearch.value = `${user.firstname || ''} ${user.lastname || ''} (${user.email || ''})`.trim();
                    personidInput.value = user.personid;
                    resultsContainer.classList.remove('show');
                    clearBtn.style.display = 'block';
                  });
                  resultsContainer.appendChild(item);
                });
              }

              resultsContainer.classList.add('show');
            } catch (error) {
              console.error('Error searching users:', error);
              resultsContainer.innerHTML = '<div class="user-result-item" style="cursor: default; color: var(--danger);">Error searching users</div>';
              resultsContainer.classList.add('show');
            }
          }, 300);
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
          if (!donorSearch.contains(e.target) && !resultsContainer.contains(e.target)) {
            resultsContainer.classList.remove('show');
          }
        });

        // Show clear button if personid is already set (edit mode)
        if (personidInput.value) {
          clearBtn.style.display = 'block';
        }

        // Escape HTML helper
        function escapeHtml(text) {
          const div = document.createElement('div');
          div.textContent = text;
          return div.innerHTML;
        }
      })();
    </script>

<%- include('../partials/footer') %>

